# App configuration
# ==============================
# host of your app (localhost or 127.0.0.1 is default)
export APP_HOST=0.0.0.0
# port of your app (8000 default)
export APP_PORT=8000
export IS_APP_AUTO_RELOAD=true
export APP_MODE=test # dev | test | prod
# ==============================

# Auth settings
# ==============================
export ACCESS_SECRET_KEY=my-cool-test-access-key
export REFRESH_SECRET_KEY=my-cool-test-refresh-key
export ACCESS_COOKIE_NAME=access_token
export REFRESH_COOKIE_NAME=refresh_token
export APP_ALGORITHM=HS256
export ACCESS_TOKEN_EXPIRES_MINUTES=15
export REFRESH_TOKEN_EXPIRES_MINUTES=43200
export TOKEN_TYPE=bearer
# ==============================

# Db settings
# ==============================
export DB_TYPE=postgresql
export DB_HOST=localhost
export DB_PORT=5432
export DB_DRIVER=asyncpg
export DB_USER=van
export DB_PASSWORD=1242
export DB_NAME=test_wine_database
export DB_ECHO=false
# ==============================

# Logger settings
# ==============================
# the !absolute! path to the log directory
export LOG_DIRECTORY=~/code/test_db_question/logs/
export DATE_FORMAT=%Y-%m-%d %H:%M:%S
export LOG_FORMAT=[%(asctime)s.%(msecs)03d] %(module)10s:%(lineno)-3d %(levelname)-7s - %(message)s
export LOG_ROATING=midnight
export BACKUP_COUNT=30
# The field defines logs rotating in UTC or local time
export LOG_UTC=true
# Logging levels: https://docs.python.org/3/library/logging.html#logging-levels
export LOG_LEVEL=0 # Debug
# ==============================

# Sentry
# ==============================
export SENTRY_DSN=your-sentry-link
# ==============================

